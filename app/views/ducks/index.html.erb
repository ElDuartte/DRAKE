<div class="hero-index">
  <p class="hero-index-title">FIND YOUR PERFECT DUCK</p>
</div>
<div class="container-page">
  <!-- main container of the card -->
  <% @ducks.each do |duck| %>
    <div class="container-card">
      <!-- small container with white background -->
      <div class="container-inner">
        <!-- rubber duck image --> <!-- link to the show -->
        <%= link_to duck_path(duck) do %>
          <%= cl_image_tag duck.photo.key, class: "img" %>
        <% end %>
        <!-- container reviews and description -->
        <div class="container-details">
          <!-- link to the show -->
          <a href="#">
            <!-- title or name -->
            <div class="name-duck">
              <div class="name-duck-text">
                <%= link_to duck.name, duck_path(duck) %>
              </div>
            </div>
          </a>
          <!-- all the details -->
          <div class="details">
            <div class="reviews">
              <p class="reviews-title">Reviews:</p>
              <div class="score">
                <img
                  src="https://res.cloudinary.com/rubberd/image/upload/v1653397902/RubberDs/logo-duck-1-no-background_zf9e9q.png"
                  alt="rubber"
                  class="review-score"
                >
                <img
                  src="https://res.cloudinary.com/rubberd/image/upload/v1653397902/RubberDs/logo-duck-1-no-background_zf9e9q.png"
                  alt="rubber"
                  class="review-score"
                >
                <img
                  src="https://res.cloudinary.com/rubberd/image/upload/v1653397902/RubberDs/logo-duck-1-no-background_zf9e9q.png"
                  alt="rubber"
                  class="review-score"
                >
                <img
                  src="https://res.cloudinary.com/rubberd/image/upload/v1653397902/RubberDs/logo-duck-1-no-background_zf9e9q.png"
                  alt="rubber"
                  class="review-score"
                >
                <img
                  src="https://res.cloudinary.com/rubberd/image/upload/v1653397902/RubberDs/logo-duck-1-no-background_zf9e9q.png"
                  alt="rubber"
                  class="review-score"
                >
              </div>
            </div>
            <div class="description">
              <p><%= duck.description %>
              </p>
            </div>
          </div>
          <!-- location and price -->
          <div class="location-price">
            <div class="location-price-text">
              <p class="location-price-text-a"><%= duck.location %></p>
              <p class="location-price-text-a">â‚¬<%= duck.price %></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
