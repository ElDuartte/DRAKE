<div class="container-login">
  <h2 class="title-login">SING IN</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs-login">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" }, class:"input-login", style:"border: 5px solid black;" %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" }, id:"input-login", style:"border: 5px solid black;" %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Log in", id:"button_login" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
